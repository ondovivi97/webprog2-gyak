<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Új étel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mt-4">
    <h2>Új étel felvétele</h2>

    <form action="<%= basePath %>/crud/uj" method="POST">
      <div class="mb-3">
        <label for="nev" class="form-label">Étel neve</label>
        <input type="text" name="nev" id="nev" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="kategoriaid" class="form-label">Kategória</label>
        <select name="kategoriaid" id="kategoriaid" class="form-select">
          <% kategoriak.forEach(k => { %>
            <option value="<%= k.id %>"><%= k.nev %></option>
          <% }) %>
        </select>
      </div>

      <button type="submit" class="btn btn-success">Mentés</button>
    </form>
  </main>
</body>
</html>
