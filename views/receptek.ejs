<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Receptek</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="<%= basePath %>/css/main.css">
  <link rel="stylesheet" href="<%= basePath %>/css/sajat.css">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container">
    <h2 class="mb-4">Receptek</h2>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Név</th>
          <th>Kategória</th>
          <th>Hozzávalók</th>
        </tr>
      </thead>
      <tbody>
        <% etelek.forEach(e => { %>
          <tr>
            <td><%= e.id %></td>
            <td><%= e.nev %></td>
            <td><%= e.kategoria_nev %></td>
            <td><%= e.hozzavalok %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
