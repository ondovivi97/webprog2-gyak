<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Ételek</title>
    <!-- Yummy CSS -->
    <link rel="stylesheet" href="<%= basePath %>/css/main.css">
    <!-- Bootstrap CSS (Yummy téma kiegészítésére) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/header') %>

<main class="container mt-5">
    <h2>Ételek</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Étel ID</th>
                <th>Étel név</th>
                <th>Kategória ID</th>
            </tr>
        </thead>
        <tbody>
            <% etelek.forEach(e => { %>
            <tr>
                <td><%= e.id %></td>
                <td><%= e.nev %></td>
                <td><%= e.kategoria_id %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</main>

<%- include('partials/footer') %>

</body>
</html>
