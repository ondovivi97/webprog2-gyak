<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Étel szerkesztése</title>
    <link rel="stylesheet" href="/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/header') %>

<main class="container mt-5">
    <h2 class="mb-4">Étel szerkesztése</h2>

    <form action="/crud/szerkesztes/<%= etel.id %>" method="POST">
        <div class="mb-3">
            <label for="nev" class="form-label">Étel neve</label>
            <input type="text" class="form-control" id="nev" name="nev" value="<%= etel.nev %>" required>
        </div>

        <div class="mb-3">
            <label for="kategoriaid" class="form-label">Kategória</label>
            <select class="form-select" id="kategoriaid" name="kategoriaid" required>
                <% kategoriak.forEach(kat => { %>
                    <option value="<%= kat.id %>" <%= kat.id === etel.kategoriaid ? 'selected' : '' %>><%= kat.nev %></option>
                <% }) %>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Mentés</button>
        <a href="/crud" class="btn btn-secondary">Mégsem</a>
    </form>
</main>

<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
