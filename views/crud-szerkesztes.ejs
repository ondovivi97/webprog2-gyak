<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Étel szerkesztése</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mt-4">
    <h2>Étel szerkesztése (#<%= etel.id %>)</h2>

    <form action="<%= basePath %>/crud/szerkesztes/<%= etel.id %>" method="POST">
      <div class="mb-3">
        <label for="nev" class="form-label">Étel neve</label>
        <input type="text" name="nev" id="nev" class="form-control" value="<%= etel.nev %>" required>
      </div>

      <div class="mb-3">
        <label for="kategoriaid" class="form-label">Kategória</label>
        <select name="kategoriaid" id="kategoriaid" class="form-select">
          <% kategoriak.forEach(k => { %>
            <option value="<%= k.id %>" <%= k.id === etel.kategoriaid ? 'selected' : '' %>>
              <%= k.nev %>
            </option>
          <% }) %>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Mentés</button>
      <a href="<%= basePath %>/crud" class="btn btn-secondary ms-2">Mégse</a>
    </form>
  </main>
</body>
</html>
