<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Üzenetek</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/sajat.css">
    
</head>
<body>
<%- include('partials/header', { title: title }) %>

<div class="container mt-5">
    <h1 class="mb-4">Beérkezett üzenetek</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Név</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Üzenet</th>
                <th>IP cím</th>
                <th>Beküldve</th>
            </tr>
        </thead>

        <tbody>
        <% if (uzenetek.length === 0) { %>
            <tr>
                <td colspan="7" class="text-center">Nincs még üzenet.</td>
            </tr>
        <% } else { %>
            <% uzenetek.forEach(u => { %>
            <tr>
                <td><%= u.id %></td>
                <td><%= u.nev %></td>
                <td><%= u.email %></td>
                <td><%= u.telefon %></td>
                <td><%= u.uzenet %></td>
                <td><%= u.bekuldo_ip %></td>
                <td><%= u.bekuldve %></td>
            </tr>
            <% }) %>
        <% } %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>
