<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Üzenetek</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="<%= basePath %>/css/main.css">
  <link rel="stylesheet" href="<%= basePath %>/css/sajat.css">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mt-4">
    <h2 class="mb-3">Beérkezett üzenetek</h2>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Dátum</th>
          <th>Név</th>
          <th>Email</th>
          <th>Telefon</th>
          <th>Üzenet</th>
        </tr>
      </thead>
      <tbody>
        <% uzenetek.forEach(u => { %>
          <tr>
            <td><%= u.bekuldve %></td>
            <td><%= u.nev %></td>
            <td><%= u.email || '' %></td>
            <td><%= u.telefon || '' %></td>
            <td><%= u.uzenet %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
</body>
</html>
