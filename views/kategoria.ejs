<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Kategóriák</title>
    <link rel="stylesheet" href="<%= basePath %>/css/yummy-red.css">
</head>
<body>

<%- include('partials/header') %>

<main>
    <h2>Kategóriák</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Név</th>
                <th>Leírás</th>
            </tr>
        </thead>
        <tbody>
            <% kategoriak.forEach(k => { %>
            <tr>
                <td><%= k.id %></td>
                <td><%= k.nev %></td>
                <td><%= k.leiras || '' %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</main>

<%- include('partials/footer') %>

</body>
</html>
