<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Ételek és Hozzávalók</title>
    <link rel="stylesheet" href="/css/yummy-red.css">
</head>
<body>

<%- include('partials/header') %>

<main>
    <h2>Ételek és Hozzávalók</h2>
    <% etelek.forEach(etel => { %>
        <h3><%= etel.etel_nev %> (<%= etel.kategoria %>)</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Hozzávaló</th>
                    <th>Mennyiség</th>
                    <th>Egység</th>
                </tr>
            </thead>
            <tbody>
                <% etel.hozzavalok.forEach(h => { %>
                <tr>
                    <td><%= h.nev %></td>
                    <td><%= h.mennyiseg || '' %></td>
                    <td><%= h.egyseg || '' %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <br>
    <% }) %>
</main>

<%- include('partials/footer') %>

</body>
</html>
