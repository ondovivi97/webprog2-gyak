<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Regisztráció</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="<%= basePath %>/css/main.css">
  <link rel="stylesheet" href="<%= basePath %>/css/sajat.css">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mt-4">
    <h2 class="mb-3">Regisztráció</h2>

    <% if (errors && errors.length) { %>
      <% errors.forEach(e => { %>
        <div class="alert alert-danger"><%= e %></div>
      <% }) %>
    <% } %>

    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <form action="<%= basePath %>/regisztracio" method="POST" class="mt-3">
      <div class="mb-3">
        <label for="nev" class="form-label">Név</label>
        <input type="text" name="nev" id="nev" class="form-control" value="<%= values.nev || '' %>" required>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" value="<%= values.email || '' %>" required>
      </div>

      <div class="mb-3">
        <label for="jelszo" class="form-label">Jelszó</label>
        <input type="password" name="jelszo" id="jelszo" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="jelszo2" class="form-label">Jelszó újra</label>
        <input type="password" name="jelszo2" id="jelszo2" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary">Regisztráció</button>
    </form>

    <p class="mt-3">Már van fiókod? <a href="<%= basePath %>/login">Jelentkezz be!</a></p>
  </main>
</body>
</html>
