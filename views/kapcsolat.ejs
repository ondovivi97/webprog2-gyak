<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Főoldal</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/sajat.css">
    
</head>
<body>

<%- include('partials/header') %>

<main class="container my-5">
  <h2 class="mb-4">Kapcsolat</h2>

  <% if (success) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% errors.forEach(err => { %><li><%= err %></li><% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/kapcsolat" method="POST" class="row g-3">
    <div class="col-md-6">
      <label for="nev" class="form-label">Név *</label>
      <input type="text" class="form-control" id="nev" name="nev" required value="<%= values.nev || '' %>">
    </div>

    <div class="col-md-6">
      <label for="email" class="form-label">E-mail</label>
      <input type="email" class="form-control" id="email" name="email" value="<%= values.email || '' %>">
    </div>

    <div class="col-md-6">
      <label for="telefon" class="form-label">Telefonszám</label>
      <input type="text" class="form-control" id="telefon" name="telefon" value="<%= values.telefon || '' %>">
    </div>

    <div class="col-12">
      <label for="uzenet" class="form-label">Üzenet *</label>
      <textarea class="form-control" id="uzenet" name="uzenet" rows="6" required><%= values.uzenet || '' %></textarea>
    </div>

    <div class="col-12">
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </form>
</main>

<%- include('partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
