<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Kapcsolat</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="<%= basePath %>/css/main.css">
  <link rel="stylesheet" href="<%= basePath %>/css/sajat.css">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mt-4">
    <h2 class="mb-3">Kapcsolat</h2>

    <% if (errors && errors.length) { %>
      <% errors.forEach(e => { %>
        <div class="alert alert-danger"><%= e %></div>
      <% }) %>
    <% } %>

    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <form action="<%= basePath %>/kapcsolat" method="POST">
      <div class="mb-3">
        <label for="nev" class="form-label">Név</label>
        <input type="text" name="nev" id="nev" class="form-control" value="<%= values.nev || '' %>" required>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email (opcionális)</label>
        <input type="email" name="email" id="email" class="form-control" value="<%= values.email || '' %>">
      </div>

      <div class="mb-3">
        <label for="telefon" class="form-label">Telefon (opcionális)</label>
        <input type="text" name="telefon" id="telefon" class="form-control" value="<%= values.telefon || '' %>">
      </div>

      <div class="mb-3">
        <label for="uzenet" class="form-label">Üzenet</label>
        <textarea name="uzenet" id="uzenet" rows="5" class="form-control" required><%= values.uzenet || '' %></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Üzenet küldése</button>
    </form>
  </main>
</body>
</html>
