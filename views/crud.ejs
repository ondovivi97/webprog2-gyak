<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>CRUD – Ételek</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="<%= basePath %>/css/main.css">
  <link rel="stylesheet" href="<%= basePath %>/css/sajat.css">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Ételek (CRUD)</h2>
      <a href="<%= basePath %>/crud/uj" class="btn btn-success">Új étel</a>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Név</th>
          <th>Kategória</th>
          <th>Műveletek</th>
        </tr>
      </thead>
      <tbody>
        <% etelek.forEach(e => { %>
          <tr>
            <td><%= e.id %></td>
            <td><%= e.nev %></td>
            <td><%= e.kategoria_nev || '' %></td>
            <td>
              <a href="<%= basePath %>/crud/szerkesztes/<%= e.id %>" class="btn btn-sm btn-primary">Szerkesztés</a>
              <a href="<%= basePath %>/crud/torles/<%= e.id %>" class="btn btn-sm btn-danger"
                 onclick="return confirm('Biztosan törlöd?');">Törlés</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
</body>
</html>
