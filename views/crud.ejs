<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Ételek (CRUD)</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="<%= basePath %>/css/main.css">
  <link rel="stylesheet" href="<%= basePath %>/css/sajat.css">
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mt-5">
    <div class="card shadow-lg rounded-4">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2 class="mb-0">Ételek (CRUD)</h2>
          <a href="<%= basePath %>/crud/uj" class="btn btn-success">Új étel</a>
        </div>

        <% if (!etelek || etelek.length === 0) { %>
          <div class="alert alert-info">
            Jelenleg nincs étel az adatbázisban.
          </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-striped align-middle">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Név</th>
                  <th>Kategória</th>
                  <th>Hozzávalók</th>
                  <th>Műveletek</th>
                </tr>
              </thead>
              <tbody>
                <% etelek.forEach(e => { %>
                  <tr>
                    <td><%= e.id %></td>
                    <td><%= e.nev %></td>
                    <td><%= e.kategoria_nev || '' %></td>
                    <td style="max-width: 400px;">
                      <small><%= e.hozzavalok || '-' %></small>
                    </td>
                    <td>
                      <a href="<%= basePath %>/crud/szerkesztes/<%= e.id %>" class="btn btn-sm btn-primary mb-1">Szerkesztés</a>
                  
                      <a href="<%= basePath %>/crud/torles/<%= e.id %>"
                         class="btn btn-sm btn-danger mb-1"
                         onclick="return confirm('Biztosan törlöd?');">Törlés</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
