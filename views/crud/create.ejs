<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Új étel hozzáadása</title>
    <link rel="stylesheet" href="/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/header') %>

<main class="container my-5">
    <h2 class="mb-4">Új étel hozzáadása</h2>

    <form action="/crud/create" method="POST" class="row g-3">
        <div class="col-md-6">
            <label for="nev" class="form-label">Étel neve</label>
            <input type="text" class="form-control" id="nev" name="nev" required>
        </div>
        <div class="col-md-6">
            <label for="kategoriaid" class="form-label">Kategória ID</label>
            <input type="number" class="form-control" id="kategoriaid" name="kategoriaid">
        </div>
        <div class="col-md-6">
            <label for="felirdatum" class="form-label">Felírdátum</label>
            <input type="text" class="form-control" id="felirdatum" name="felirdatum">
        </div>
        <div class="col-md-6">
            <label for="elsodatum" class="form-label">Első dátum</label>
            <input type="text" class="form-control" id="elsodatum" name="elsodatum">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-success">Hozzáadás</button>
            <a href="/crud" class="btn btn-secondary">Mégse</a>
        </div>
    </form>
</main>

<%- include('partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
