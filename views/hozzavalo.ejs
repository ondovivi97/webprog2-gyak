<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Hozzávalók</title>
    <link rel="stylesheet" href="<%= basePath %>/css/yummy-red.css">
</head>
<body>

<%- include('partials/header') %>

<main>
    <h2>Hozzávalók</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Név</th>
                <th>Egység</th>
            </tr>
        </thead>
        <tbody>
            <% hozzavalok.forEach(h => { %>
            <tr>
                <td><%= h.id %></td>
                <td><%= h.nev %></td>
                <td><%= h.egyseg %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</main>

<%- include('partials/footer') %>

</body>
</html>
