<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>CRUD - Ételek</title>
    <link rel="stylesheet" href="/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/header') %>

<main class="container my-5">
    <h2 class="mb-4">CRUD - Ételek</h2>

    <a href="/crud/create" class="btn btn-success mb-3">Új étel hozzáadása</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Név</th>
                <th>Kategória ID</th>
                <th>Felírdátum</th>
                <th>Első dátum</th>
                <th>Műveletek</th>
            </tr>
        </thead>
        <tbody>
            <% etelek.forEach(etel => { %>
            <tr>
                <td><%= etel.id %></td>
                <td><%= etel.nev %></td>
                <td><%= etel.kategoriaid %></td>
                <td><%= etel.felirdatum || '' %></td>
                <td><%= etel.elsodatum || '' %></td>
                <td>
                    <a href="/crud/update/<%= etel.id %>" class="btn btn-primary btn-sm">Módosítás</a>
                    <a href="/crud/delete/<%= etel.id %>" class="btn btn-danger btn-sm">Törlés</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</main>

<%- include('partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
